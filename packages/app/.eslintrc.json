{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["plugin:react/recommended", "google", "prettier"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "ignorePatterns": ["node_modules/**/*.*"],
  "rules": {
    "linebreak-style": "off",
    "react/react-in-jsx-scope": "off",
    "react/prop-types": "off",
    "require-jsdoc": "off",
    "semi": "error",
    "indent": ["error", 2]
  }
}
